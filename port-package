#!/bin/sh
#
# @author Ralf Habacker
#
# port native package to mingw32|64
#
d=$(realpath $0)
d=$(dirname $d)

srcprj=$1
srcpkg=$2
cdir=0

if [[ "$3" == "." ]]; then
    cdir=1
    dstprj=$(osc meta prj | gawk '$0 ~ /project name/ { match($0, /="(.*)"/, a); print a[1] }')
else
    dstprj=$3
fi
if [[ $dstprj =~ "32" ]]; then
    dstpat=mingw32
else
    dstpat=mingw64
fi
dstpkg=$dstpat-$srcpkg
echo $dstprj $dstpkg

if test -z "$srcprj" || test -z "$srcpkg"; then
    echo "$0 [<options>] <source project> <source package> <destination project>     port native package from <source-project> <source-package> to <destination project> or current project dir"
    exit 1
fi
(
    osc copypac -e $srcprj $srcpkg $dstprj $dstpkg
    if test $? -ne 0; then
        exit 2
    fi
    if test $cdir == "1"; then
        osc co $dstpkg
        cd $dstpkg
    else
        cd ~/osc
        osc co $dstprj $dstpkg
        if test $? -ne 0; then
            exit 3
        fi
        cd $dstprj/$dstpkg
    fi
    if test -f $srcpkg.spec; then
        osc mv $srcpkg.spec $dstpkg.spec
        $d/patch-$dstpat $dstpkg.spec > tmp
        mv tmp $dstpkg.spec
    fi
    if test -f $srcpkg.changes; then
        osc mv $srcpkg.changes $dstpkg.changes
    fi
    if test -f $srcpkg-rpmlintrc; then
        osc mv $srcpkg-rpmlintrc $dstpkg-rpmlintrc
    fi
    echo "osc ci -m \"port to $dstpat\""
)
