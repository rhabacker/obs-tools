#!/bin/sh
#
# @author Ralf Habacker
#
# port native package to mingw32|64
#
d=$(realpath $0)
d=$(dirname $d)

(
    if test -d mingw64-$1; then
        prefix=mingw64
    else
        prefix=mingw32
    fi
    cd $prefix-$1
    if test -f $1.spec; then
        osc mv $1.spec $prefix-$1.spec
        $d/patch-$prefix $prefix-$1.spec > tmp
        mv tmp $prefix-$1.spec
    fi
    if test -f $1.changes; then
        osc mv $1.changes $prefix-$1.changes
    fi
    if test -f $1-rpmlintrc; then
        osc mv $1-rpmlintrc $prefix-$1-rpmlintrc
    fi
    echo "osc ci -m \"port to $prefix\""
)
